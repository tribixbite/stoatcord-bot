# Discord bot token (from https://discord.com/developers/applications)
DISCORD_TOKEN=

# Stoat/Revolt bot token (from app settings or bot page)
STOAT_TOKEN=

# Stoat API base URL (default: https://api.stoat.chat/0.8)
STOAT_API_BASE=https://api.stoat.chat/0.8

# Stoat WebSocket URL (default: wss://events.stoat.chat)
STOAT_WS_URL=wss://events.stoat.chat

# Stoat CDN base URL for avatars/files
STOAT_CDN_URL=https://cdn.stoatusercontent.com

# HTTP API server port (for Stoat app integration)
API_PORT=3210

# API key for HTTP API auth (shared secret with Stoat app, leave blank to disable)
API_KEY=

# Push notification relay configuration
# Path to Firebase service account JSON (for FCM HTTP v1 API)
FIREBASE_SERVICE_ACCOUNT=firebase-service-account.json
# Or provide the JSON string directly (for containerized deployments)
# FIREBASE_SA_JSON={"type":"service_account",...}
# Enable/disable push relay (default: true)
PUSH_ENABLED=true
# Bot's public URL that Android app connects to for push registration
PUSH_BOT_API_URL=http://localhost:3210
# VAPID keys for UnifiedPush/WebPush (generate with: bun -e "console.log(require('web-push').generateVAPIDKeys())")
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# SQLite database file path (default: stoatcord.db, use absolute path for containers)
# DB_PATH=stoatcord.db
